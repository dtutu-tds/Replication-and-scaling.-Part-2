# ProxySQL конфигурация для шардинга

datadir="/var/lib/proxysql"

admin_variables=
{
    admin_credentials="admin:admin"
    mysql_ifexists="true"
    refresh_interval=2000
    debug=false
}

mysql_variables=
{
    threads=4
    max_connections=2048
    default_query_delay=0
    default_query_timeout=36000000
    have_compress=true
    poll_timeout=2000
    interfaces="0.0.0.0:6032"
    default_schema="information_schema"
    stacksize=1048576
    server_version="8.0.25"
    connect_timeout_server=10000
    monitor_history=60000
    monitor_connect_interval=60000
    monitor_read_only_interval=1500
    monitor_read_only_timeout=800
    ping_interval_server_msec=120000
    ping_timeout_server=200
    commands_stats=true
    sessions_sort=true
}

# Определение серверов (шардов)
mysql_servers =
(
    {
        address="mysql-shard1-master"
        port=3306
        hostgroup=1
        status="ONLINE"
        weight=1000
        max_connections=100
    },
    {
        address="mysql-shard1-slave"
        port=3306
        hostgroup=1
        status="ONLINE"
        weight=100
        max_connections=100
    },
    {
        address="mysql-shard2-master"
        port=3306
        hostgroup=2
        status="ONLINE"
        weight=1000
        max_connections=100
    },
    {
        address="mysql-shard2-slave"
        port=3306
        hostgroup=2
        status="ONLINE"
        weight=100
        max_connections=100
    },
    {
        address="mysql-shard3"
        port=3306
        hostgroup=3
        status="ONLINE"
        weight=1000
        max_connections=100
    }
)

# Определение пользователей
mysql_users =
(
    {
        username="sharduser"
        password="shardpass"
        default_hostgroup=1
        max_connections=100
    }
)

# Правила маршрутизации для шардинга
mysql_query_rules =
(
    {
        rule_id=1
        active=1
        match_pattern="^SELECT.*FROM users.*WHERE.*id.*=.*([0-9]+)"
        destination_hostgroup=1
        apply=1
    },
    {
        rule_id=2
        active=1
        match_pattern="^SELECT.*FROM books.*WHERE.*user_id.*=.*([0-9]+)"
        destination_hostgroup=1
        apply=1
    },
    {
        rule_id=3
        active=1
        match_pattern="^SELECT.*FROM stores"
        destination_hostgroup=3
        apply=1
    },
    {
        rule_id=4
        active=1
        match_pattern="^INSERT.*INTO users"
        destination_hostgroup=1
        apply=1
    },
    {
        rule_id=5
        active=1
        match_pattern="^INSERT.*INTO books"
        destination_hostgroup=2
        apply=1
    },
    {
        rule_id=6
        active=1
        match_pattern="^INSERT.*INTO stores"
        destination_hostgroup=3
        apply=1
    }
)
